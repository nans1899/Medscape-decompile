<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/annot_note_layout" android:background="#afafaf" android:padding="5dp" android:layout_width="wrap_content" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <TextView android:textColor="#000000" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Link Type"/>
        <RadioGroup android:id="@+id/annot_link_type" android:layout_width="250dp" android:layout_height="wrap_content">
            <RadioButton android:textColor="#000000" android:id="@+id/annot_link_type_page" android:layout_width="wrap_content" android:layout_height="wrap_content" android:checked="false" android:text="Go to Page"/>
            <RadioButton android:textColor="#000000" android:id="@+id/annot_link_type_uri" android:layout_width="wrap_content" android:layout_height="wrap_content" android:checked="false" android:text="Link URI"/>
            <RadioButton android:textColor="#000000" android:id="@+id/annot_link_type_launch" android:layout_width="wrap_content" android:layout_height="wrap_content" android:checked="false" android:text="Application Launch"/>
        </RadioGroup>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="30dp">
        <TextView android:textColor="#000000" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Target"/>
        <EditText android:gravity="top" android:id="@+id/annot_link_target" android:scrollbars="vertical" android:layout_width="250dp" android:layout_height="wrap_content"/>
    </LinearLayout>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <Button android:id="@+id/annot_link_cancel" android:layout_width="80dp" android:layout_height="wrap_content" android:text="Cancel" android:layout_alignParentLeft="true"/>
        <Button android:id="@+id/annot_link_add" android:layout_width="80dp" android:layout_height="wrap_content" android:text="Add" android:layout_alignParentRight="true"/>
    </RelativeLayout>
</LinearLayout>
