<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/body_layout" android:background="@drawable/default_list_view" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="16sp" android:textColor="#000" android:id="@+id/list_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_toLeftOf="@+id/arrow" android:layout_alignParentLeft="true" android:layout_alignParentTop="true"/>
        <TextView android:textSize="13sp" android:textColor="@color/material_grey" android:id="@+id/content_type_date" android:paddingTop="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_toLeftOf="@+id/arrow" android:layout_below="@+id/list_title" android:layout_alignParentLeft="true"/>
        <ImageView android:id="@+id/arrow" android:paddingLeft="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/table_row_arrow" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
</LinearLayout>
