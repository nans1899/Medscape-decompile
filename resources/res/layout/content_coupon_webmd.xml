<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@drawable/dotted_line_background_rounded_corners" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:layout_width="90dp" android:layout_height="15dp" android:layout_marginTop="20dp" android:src="@drawable/ic_webmdrx_logo_black" android:layout_marginStart="16dp" android:layout_alignParentStart="true"/>
        <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#222222" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:text="@string/pharmacy_savings" android:textAllCaps="true" android:fontFamily="sans-serif-medium" android:layout_marginEnd="16dp" android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <View android:background="@color/horizontal_rule_webmd_coupon" android:layout_width="match_parent" android:layout_height="2dp" android:layout_marginTop="4dp" android:layout_marginStart="16dp" android:layout_marginEnd="16dp"/>
    <TextView android:textSize="20sp" android:textStyle="bold" android:textColor="#222222" android:id="@+id/show_coupon_drug_name_webmd" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:lineSpacingExtra="8sp" android:fontFamily="sans-serif" android:layout_marginStart="16dp"/>
    <TextView android:textSize="16sp" android:textStyle="normal" android:textColor="#767674" android:id="@+id/show_coupon_drug_detail_webmd" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:lineSpacingExtra="5sp" android:fontFamily="sans-serif" android:layout_marginStart="16dp"/>
    <TextView android:textSize="20sp" android:textStyle="bold" android:textColor="#222222" android:id="@+id/text_coupon_drug_price_webmd" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:lineSpacingExtra="8sp" android:fontFamily="sans-serif" android:layout_marginStart="16dp"/>
    <TextView android:textSize="20sp" android:textStyle="bold" android:textColor="#222222" android:id="@+id/text_coupon_pharmacy_name_webmd" android:layout_width="wrap_content" android:layout_height="wrap_content" android:lineSpacingExtra="8sp" android:fontFamily="sans-serif" android:layout_marginStart="16dp" android:layout_marginEnd="16dp"/>
    <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#4a4a4a" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:text="@string/estimated_price_text" android:lineSpacingExtra="4sp" android:fontFamily="sans-serif" android:layout_marginStart="16dp"/>
    <RelativeLayout android:background="@color/webmd_coupon_background" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:layout_marginBottom="12dp" android:layout_marginStart="2dp" android:layout_marginEnd="2dp">
        <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="#de000000" android:id="@+id/text_pharmacists_info" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="@string/pharmacists_info" android:lineSpacingExtra="6sp" android:fontFamily="sans-serif" android:layout_marginStart="16dp"/>
        <LinearLayout android:orientation="horizontal" android:id="@+id/layout_member_rx_grp" android:layout_width="match_parent" android:layout_height="wrap_content" android:weightSum="10" android:layout_below="@+id/text_pharmacists_info" android:layout_marginStart="16dp" android:layout_marginEnd="16dp">
            <LinearLayout android:orientation="vertical" android:id="@+id/layout_member_id" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:layout_weight="5">
                <TextView android:textSize="14sp" android:textStyle="normal" android:textColor="#767674" android:id="@+id/label_member_id" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/member_id_number" android:lineSpacingExtra="10sp" android:fontFamily="sans-serif"/>
                <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="#de000000" android:id="@+id/coupon_auth_number_webmd" android:layout_width="wrap_content" android:layout_height="wrap_content" android:lineSpacingExtra="6sp" android:fontFamily="sans-serif"/>
            </LinearLayout>
            <LinearLayout android:gravity="left" android:orientation="vertical" android:id="@+id/layout_rx_group" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:layout_weight="5">
                <TextView android:textSize="14sp" android:textStyle="normal" android:textColor="#767674" android:gravity="start" android:id="@+id/label_rx_group" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/rx_group" android:lineSpacingExtra="10sp" android:fontFamily="sans-serif"/>
                <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="#de000000" android:gravity="start" android:id="@+id/coupon_grp_number_webmd" android:layout_width="wrap_content" android:layout_height="wrap_content" android:lineSpacingExtra="6sp" android:fontFamily="sans-serif"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:id="@+id/layout_pcn_bin" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="12dp" android:weightSum="10" android:layout_below="@+id/layout_member_rx_grp" android:layout_marginStart="16dp" android:layout_marginEnd="16dp">
            <LinearLayout android:orientation="vertical" android:id="@+id/layout_rx_bin" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:layout_weight="5">
                <TextView android:textSize="14sp" android:textStyle="normal" android:textColor="#767674" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/rx_bin" android:lineSpacingExtra="10sp" android:fontFamily="sans-serif"/>
                <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="#de000000" android:id="@+id/coupon_bin_number_webmd" android:layout_width="wrap_content" android:layout_height="wrap_content" android:lineSpacingExtra="6sp" android:fontFamily="sans-serif"/>
            </LinearLayout>
            <LinearLayout android:gravity="left" android:orientation="vertical" android:id="@+id/layout_rx_pcn" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:layout_weight="5">
                <TextView android:textSize="14sp" android:textStyle="normal" android:textColor="#767674" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/rx_pcn" android:lineSpacingExtra="10sp" android:fontFamily="sans-serif"/>
                <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="#de000000" android:id="@+id/coupon_pcn_number_webmd" android:layout_width="wrap_content" android:layout_height="wrap_content" android:lineSpacingExtra="6sp" android:fontFamily="sans-serif"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#767674" android:gravity="center_horizontal" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:text="@string/customer_questions_call" android:lineSpacingExtra="4sp" android:fontFamily="sans-serif"/>
    <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#767674" android:gravity="center_horizontal" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:layout_marginBottom="16dp" android:text="@string/this_is_not_insurance" android:lineSpacingExtra="4sp" android:fontFamily="sans-serif-medium"/>
</LinearLayout>
