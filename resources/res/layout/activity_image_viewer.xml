<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/root_layout" android:background="@color/black" android:layout_width="match_parent" android:layout_height="match_parent">
    <androidx.viewpager.widget.ViewPager android:layout_gravity="center" android:id="@+id/slides_pager" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="0dp"/>
    <TextView android:textColor="@color/white" android:gravity="top|left|center_vertical|center_horizontal|center" android:id="@+id/slide_counter" android:background="@color/black_overlay" android:padding="5dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="15dp"/>
    <ImageView android:id="@+id/single_image" android:visibility="visible" android:layout_width="match_parent" android:layout_height="400dp" android:layout_margin="0dp" android:scaleType="center" android:layout_centerInParent="true"/>
    <TextView android:textColor="@color/white" android:id="@+id/swipe_message" android:background="@drawable/brandadvance_toast" android:padding="5dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="100dp" android:text="@string/slides_swipe_instructions" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"/>
    <ScrollView android:id="@+id/captionContainer" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <LinearLayout android:orientation="vertical" android:id="@+id/detail_description_container" android:background="@color/black_overlay" android:paddingLeft="10dp" android:paddingTop="0dp" android:paddingRight="10dp" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
            <ImageView android:layout_gravity="center_horizontal" android:id="@+id/expandCollapseTextToggle" android:tag="expanded" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_expand_more_white_24dp" android:tint="@color/grey80" android:onClick="onExpandCollapseTextToggle"/>
            <TextView android:textSize="12sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/caption" android:layout_width="match_parent" android:layout_height="wrap_content" android:textAlignment="center"/>
        </LinearLayout>
    </ScrollView>
    <Button android:textColor="@color/white" android:id="@+id/close_button" android:background="@drawable/imageviewer_button_off" android:layout_width="wrap_content" android:layout_height="30dp" android:layout_margin="15dp" android:text="@string/imageviewer_button_close" android:layout_alignParentTop="true" android:layout_alignParentRight="true" android:onClick="onCloseClick"/>
    <ProgressBar android:id="@+id/progress_bar" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true" style="@style/progressbarStyle"/>
</RelativeLayout>
