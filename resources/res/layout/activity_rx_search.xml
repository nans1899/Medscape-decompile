<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/root_view" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar android:id="@+id/a_search_toolbar" android:background="@color/white" android:layout_width="match_parent" android:layout_height="?attr/actionBarSize" android:elevation="4dp" app:popupTheme="@style/ThemeOverlay.AppCompat.Light" app:titleTextAppearance="@style/Toolbar.TitleText">
        <LinearLayout android:orientation="horizontal" android:id="@+id/home_search_activity_toolbar_search_layout" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginRight="10dp">
            <com.wbmd.wbmdcommons.customviews.EditTextBackEvent android:textSize="18sp" android:textColor="@android:color/black" android:id="@+id/rx_edit_text_search" android:background="#00f0f0f0" android:padding="5dp" android:focusable="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Enter a drug name" android:layout_weight="1" android:inputType="textCapSentences" android:keyBackground="@drawable/keyboard_drawable" android:imeOptions="actionSearch"/>
            <ImageView android:layout_gravity="right|center_vertical|center_horizontal|center" android:id="@+id/a_search_image_view_clear_search" android:visibility="gone" android:layout_width="24dp" android:layout_height="24dp" android:layout_marginRight="10dp" android:src="@drawable/ic_cancel_black_24dp" android:tint="@color/prescription_detail_gray"/>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>
    <RelativeLayout android:id="@+id/a_search_layout_content" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
        <com.wbmd.wbmdcommons.customviews.TextOverlayLayout android:id="@+id/rx_search_overlay" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="30dp" android:layout_alignParentStart="true" app:arrowPosition="1" app:text="@string/start_here"/>
        <View android:id="@+id/a_search_shadow_view" android:background="@drawable/background_for_toolbar_pre_lollipop" android:visibility="visible" android:layout_width="match_parent" android:layout_height="5dp"/>
        <TextView android:textSize="20dp" android:textColor="@color/savings_card_disclaimer" android:gravity="center" android:id="@+id/a_search_text_view_no_results" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="15dp" android:text="@string/search_no_results"/>
        <ProgressBar android:id="@+id/a_search_progress_bar" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="100dp" android:indeterminate="true" android:layout_centerHorizontal="true"/>
        <androidx.recyclerview.widget.RecyclerView android:id="@+id/a_search_recycler_view_search_results" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent"/>
        <FrameLayout android:id="@+id/a_search_layout_recent_search_header" android:background="@color/background_color_gray" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
            <com.wbmd.wbmdcommons.customviews.CustomFontTextView android:textSize="14sp" android:textStyle="normal" android:textColor="@color/toolbar_icon_gray" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:layout_marginBottom="16dp" android:text="Recently Viewed" android:lineSpacingExtra="10sp" android:layout_marginStart="13dp" android:layout_marginEnd="16dp" app:fontName="Roboto-Medium.ttf"/>
            <ImageView android:layout_gravity="right|center_vertical|center_horizontal|center" android:id="@+id/a_search_image_view_clear_recent" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="12dp" android:src="@drawable/ic_close_search"/>
        </FrameLayout>
        <FrameLayout android:id="@+id/rx_search_tip" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="100dp" android:layout_centerHorizontal="true">
            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
                <ImageView android:layout_gravity="center" android:layout_width="100dp" android:layout_height="16dp" android:layout_marginBottom="14dp" android:src="@drawable/ic_webmdrx_logo_blue"/>
                <TextView android:textSize="16sp" android:textStyle="normal" android:textColor="#de000000" android:layout_gravity="center" android:id="@+id/tv_market_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="5dp" android:lineSpacingExtra="8sp" android:fontFamily="sans-serif-medium"/>
                <TextView android:textSize="14sp" android:textStyle="normal" android:textColor="#8a000000" android:gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/rx_search_tip_find_lowest_prices" android:lineSpacingExtra="6sp" android:fontFamily="sans-serif" android:layout_marginStart="40dp" android:layout_marginEnd="40dp"/>
            </LinearLayout>
        </FrameLayout>
        <androidx.recyclerview.widget.RecyclerView android:id="@+id/a_search_recycler_view_recent_search" android:paddingTop="15dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/a_search_layout_recent_search_header"/>
        <ProgressBar android:id="@+id/progress_bar" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true"/>
    </RelativeLayout>
</LinearLayout>
