            <TextView android:id="@+id/consult_user_responses_body" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Morbi pretium nec diam eget vulputate. Morbi non mauris blandit, aliquam mi at, tincidunt massa. Maecenas non velit ut dui convallis gravida." android:lineSpacingExtra="2dp"/>
        </LinearLayout>
    </LinearLayout>
    <View android:background="#1e000000" android:layout_width="match_parent" android:layout_height="1dp"/>
</LinearLayout>
