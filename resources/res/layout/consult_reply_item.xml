            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="16dp" android:textColor="@color/medscapedarkblue" android:id="@+id/consult_user_responses_display_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Robert Glatter, MD" android:layout_weight="1"/>
                <TextView android:textSize="14dp" android:id="@+id/consult_user_responses_date" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="1w"/>
            </LinearLayout>
            <TextView android:ellipsize="end" android:id="@+id/consult_user_responses_profession_info" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginRight="8dp" android:layout_marginBottom="15dp" android:text="Medical Student" android:singleLine="true"/>
