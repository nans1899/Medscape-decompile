<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar android:id="@+id/toolbar" android:background="@color/activity_toolbar_background" android:fitsSystemWindows="true" android:layout_width="match_parent" android:layout_height="?attr/actionBarSize" android:elevation="4dp" app:theme="@style/MyToolbars"/>
    <ScrollView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/toolbar">
        <LinearLayout android:orientation="vertical" android:id="@+id/root_view" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="15dp" android:layout_marginTop="10dp" android:layout_marginRight="15dp" android:layout_marginBottom="10dp">
            <com.wbmd.wbmdcommons.customviews.CustomFontTextView android:textSize="25dp" android:textColor="@color/app_accent_color" android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="5dp" android:text="@string/article_congratulations_header" app:fontName="Roboto-Bold.ttf" style="@style/subHeadingTextView"/>
            <com.wbmd.wbmdcommons.customviews.CustomFontTextView android:textSize="17dp" android:textColor="@color/black" android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="15dp" android:text="@string/article_congratulations_sub_header" app:fontName="Roboto-Regular.ttf"/>
            <Button android:id="@+id/continue_button" android:background="@drawable/red_rectangular_ripple" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="15dp" android:text="@string/article_congratulations_continue_button" style="@style/redbutton"/>
            <View android:background="@color/grey" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="10dp" android:layout_marginBottom="10dp"/>
            <com.wbmd.wbmdcommons.customviews.CustomFontTextView android:textSize="20dp" android:textColor="@color/black" android:id="@+id/article_title_text_view" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="5dp" app:fontName="Roboto-Regular.ttf"/>
            <TextView android:textSize="15dp" android:textStyle="italic" android:textColor="@color/black" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/article_congratulations_summary_text"/>
            <View android:background="@color/grey" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="10dp" android:layout_marginBottom="10dp"/>
            <LinearLayout android:orientation="vertical" android:id="@+id/qna_explanation" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>
    <ProgressBar android:id="@+id/progress_bar" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true"/>
</RelativeLayout>
