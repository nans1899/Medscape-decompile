<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="horizontal" android:id="@+id/marker_layout_root" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <ImageView android:id="@+id/marker_layout_image_view_logo" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="10dp"/>
    <LinearLayout android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
        <TextView android:textSize="@dimen/savings_card_text_size_labels" android:ellipsize="end" android:id="@+id/marker_layout_text_view_name" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="1"/>
        <TextView android:textSize="@dimen/savings_card_text_size_labels" android:ellipsize="end" android:id="@+id/marker_layout_text_view_distance" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="1"/>
    </LinearLayout>
    <TextView android:textSize="@dimen/savings_card_text_size_labels" android:layout_gravity="center" android:id="@+id/marker_layout_text_view_price" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp"/>
</LinearLayout>
