<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="16sp" android:textColor="@color/black" android:id="@+id/user_auto_msg_action" android:paddingTop="5dp" android:paddingBottom="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:lineSpacingExtra="7dp"/>
        <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:id="@+id/no_results_layout" android:padding="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentTop="true" android:layout_centerHorizontal="true">
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="73dp" android:layout_marginBottom="16dp" android:src="@drawable/search"/>
            <TextView android:textSize="17sp" android:textColor="@color/black" android:id="@+id/no_results_msg" android:paddingBottom="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="No results containing warfarix were found"/>
            <TextView android:textSize="15sp" android:textColor="@color/black" android:id="@+id/user_option_msg_action" android:paddingBottom="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Did you mean: warn, ward, warm, wary, ware"/>
            <LinearLayout android:orientation="vertical" android:id="@+id/search_tips_layout" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="6dp"/>
        </LinearLayout>
    </RelativeLayout>
    <View android:id="@+id/divider" android:background="@color/consult_action_bar" android:visibility="gone" android:layout_width="match_parent" android:layout_height="12dp"/>
</LinearLayout>
