<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@drawable/s_menu_bg" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <ListView android:id="@+id/panel_outline_list" android:layout_width="match_parent" android:layout_height="match_parent" android:cacheColorHint="#00000000" android:divider="#ffffff" android:dividerHeight="0px" android:layout_weight="0.8"/>
