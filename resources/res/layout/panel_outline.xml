        <ToggleButton android:id="@+id/panel_outline_add" android:paddingBottom="20dp" android:layout_width="100dp" android:layout_height="50dp" android:layout_marginRight="10dp" android:layout_marginBottom="10dp" android:textOn="Add" android:textOff="Add" android:minWidth="1dp" android:minHeight="1dp"/>
