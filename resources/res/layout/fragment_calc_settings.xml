    </RelativeLayout>
    <RelativeLayout android:paddingTop="12dp" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="@dimen/font_size_normal" android:textStyle="normal" android:textColor="@color/text_default" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/auto_open_first_question_in_calculator" android:lineSpacingExtra="@dimen/line_spacing_extra" android:fontFamily="sans-serif" android:layout_marginStart="16dp" android:layout_alignParentStart="true"/>
