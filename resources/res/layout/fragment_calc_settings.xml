<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp">
    <RelativeLayout android:id="@+id/default_units_layout" android:paddingTop="12dp" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="@dimen/font_size_normal" android:textStyle="normal" android:textColor="@color/text_default" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/question_units" android:lineSpacingExtra="@dimen/line_spacing_extra" android:fontFamily="sans-serif" android:layout_marginStart="16dp" android:layout_alignParentStart="true"/>
