<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="horizontal" android:id="@+id/credit_total_layout" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
            <com.wbmd.wbmdcommons.customviews.CustomFontTextView android:textSize="26sp" android:textColor="#303030" android:gravity="center_horizontal" android:layout_gravity="center_horizontal" android:id="@+id/cmeTrackerHeaderCreditTextView" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0.00" app:fontName="Roboto-Medium.ttf"/>
            <com.wbmd.wbmdcommons.customviews.CustomFontTextView android:textSize="12sp" android:textColor="@color/grey" android:gravity="center_horizontal" android:layout_gravity="center_horizontal" android:id="@+id/cme_credit_total_label" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/credit_type_cme" app:fontName="Roboto-Medium.ttf"/>
        </LinearLayout>
        <View android:background="#cccccc" android:paddingBottom="5dp" android:layout_width="0.5dp" android:layout_height="match_parent"/>
        <LinearLayout android:orientation="vertical" android:id="@+id/abim_credit_total_layout" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
            <com.wbmd.wbmdcommons.customviews.CustomFontTextView android:textSize="26sp" android:textColor="#303030" android:gravity="center_horizontal" android:layout_gravity="center_horizontal" android:id="@+id/mocTrackerHeaderCreditTextView" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0.00" app:fontName="Roboto-Medium.ttf"/>
            <com.wbmd.wbmdcommons.customviews.CustomFontTextView android:textSize="12sp" android:textColor="@color/grey" android:gravity="center_horizontal" android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/credit_type_moc" app:fontName="Roboto-Medium.ttf"/>
        </LinearLayout>
        <View android:background="#cccccc" android:paddingBottom="5dp" android:layout_width="0.5dp" android:layout_height="match_parent"/>
        <LinearLayout android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
            <com.wbmd.wbmdcommons.customviews.CustomFontTextView android:textSize="26sp" android:textColor="#303030" android:gravity="center_horizontal" android:layout_gravity="center_horizontal" android:id="@+id/locTrackerHeaderCreditTextView" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0.00" app:fontName="Roboto-Medium.ttf"/>
            <com.wbmd.wbmdcommons.customviews.CustomFontTextView android:textSize="12sp" android:textColor="@color/grey" android:gravity="center_horizontal" android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/credit_type_loc" app:fontName="Roboto-Medium.ttf"/>
        </LinearLayout>
    </LinearLayout>
    <TextView android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/abim_id_button" android:background="@drawable/red_rectangular_ripple_small" android:paddingLeft="15dp" android:paddingTop="8dp" android:paddingRight="15dp" android:paddingBottom="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:text="@string/submit_abim_id" android:shadowRadius="2" android:elevation="2dp" style="@style/redbuttonNoBold"/>
    <TextView android:textSize="14sp" android:textColor="@color/app_accent_dark" android:gravity="center_horizontal" android:layout_gravity="center_horizontal" android:id="@+id/cmeTrackerStateRequirementsButton" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="@string/state_requirements"/>
</LinearLayout>
