<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="horizontal" android:padding="10dp" android:descendantFocusability="blocksDescendants" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:gravity="right" android:layout_gravity="fill_horizontal" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:paddingEnd="10dp">
        <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="#303030" android:id="@+id/cmeTrackerCreditsTextView" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0.00"/>
        <TextView android:textSize="12sp" android:textColor="#303030" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Credits"/>
        <TextView android:textSize="10sp" android:textColor="#888" android:id="@+id/cmeTrackerRxCreditsTextView" android:paddingTop="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0.00"/>
        <TextView android:textSize="10sp" android:textColor="#888" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Rx Credits"/>
    </LinearLayout>
    <LinearLayout android:layout_gravity="fill_horizontal" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:id="@+id/arrow" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_arrow_drop_down_black_24dp" android:layout_alignParentTop="true" android:layout_alignParentEnd="true"/>
            <TextView android:textStyle="bold" android:textColor="#303030" android:id="@+id/cmeTrackerTitleTextView" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="New Text" android:layout_toStartOf="@+id/arrow" android:layout_alignParentStart="true"/>
        </RelativeLayout>
        <TextView android:textSize="10sp" android:textColor="#888" android:id="@+id/cmeTrackerCoreCompTextView" android:paddingTop="5dp" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="New Text"/>
        <TextView android:textSize="10sp" android:textColor="#888" android:id="@+id/cmeTrackerCredTypeTextView" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="New Text"/>
        <TextView android:textSize="10sp" android:textColor="#888" android:id="@+id/cmeTrackerParticipationTextView" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="New Text"/>
        <TextView android:textSize="10sp" android:textColor="@color/app_accent_color" android:id="@+id/moc_status" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <LinearLayout android:orientation="horizontal" android:id="@+id/completed_options" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
            <Button android:textColor="#303030" android:id="@+id/viewActivityButton" android:background="@color/button_background" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/view_article" android:layout_marginEnd="5dp"/>
            <Button android:textColor="#303030" android:id="@+id/viewCertificateButton" android:background="@color/button_background" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/view_certificate" android:layout_marginStart="5dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
