<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item>
        <selector>
            <item android:state_pressed="true">
                <shape android:shape="rectangle">
                    <gradient android:startColor="@color/black_overlay" android:endColor="@color/black_overlay" android:angle="270"/>
                </shape>
            </item>
            <item android:state_pressed="false">
                <shape android:shape="rectangle">
                    <gradient android:startColor="@android:color/transparent" android:endColor="@android:color/transparent" android:angle="270"/>
                </shape>
            </item>
        </selector>
    </item>
</layer-list>
