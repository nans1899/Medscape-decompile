<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item>
        <shape>
            <padding android:top="3dp"/>
            <solid android:color="#06000000"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <padding android:left="3dp"/>
            <solid android:color="#06000000"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <padding android:right="1.5dp"/>
            <solid android:color="#06000000"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <padding android:bottom="1.5dp"/>
            <solid android:color="#06000000"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <stroke android:width="1dp" android:color="@color/white"/>
            <corners android:radius="15dp"/>
            <padding android:left="5dp" android:top="5dp" android:right="5dp" android:bottom="5dp"/>
            <solid android:color="@color/white"/>
        </shape>
    </item>
</layer-list>
