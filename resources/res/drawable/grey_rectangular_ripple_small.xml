<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <gradient android:startColor="@color/grey" android:endColor="@color/grey" android:angle="270"/>
            <corners android:radius="3dp"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="@color/dark_grey" android:endColor="@color/dark_grey" android:angle="270"/>
            <corners android:radius="3dp"/>
        </shape>
    </item>
</selector>
